{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/install"
    },
    {
      "name": "release",
      "displayName": "Release Build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "HPGL_BUILD_PYTHON": "ON",
        "HPGL_USE_OPENMP": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HPGL_BUILD_PYTHON": "ON",
        "HPGL_USE_OPENMP": "ON"
      }
    },
    {
      "name": "release-mkl",
      "displayName": "Release with Intel MKL",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "HPGL_USE_MKL": "ON",
        "HPGL_USE_OPENMP": "ON"
      }
    },
    {
      "name": "windows-msvc",
      "displayName": "Windows (MSVC)",
      "inherits": "base",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-ninja",
      "displayName": "Linux (Ninja)",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "macos-clang",
      "displayName": "macOS (Clang)",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release"
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release",
      "outputOnFailure": true
    },
    {
      "name": "debug",
      "configurePreset": "debug",
      "configuration": "Debug",
      "outputOnFailure": true
    }
  ],
  "packagePresets": [
    {
      "name": "release",
      "configurePreset": "release",
      "configuration": "Release",
      "packageDirectory": "${sourceDir}/dist"
    }
  ]
}
