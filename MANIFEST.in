# HPGL MANIFEST.in
# Specifies files to include in source distributions

# Include license and readme
include LICENSE
include README.md
include INSTALL.md
include pyproject.toml
include CHANGELOG.md
include AUTHORS

# Include CMake configuration
include cmake/*.cmake
recursive-include cmake *

# Include source files
recursive-include src/hpgl *.h *.cpp *.hpp
recursive-include src/geo_bsd *.h *.cpp *.hpp
recursive-include src/bs_gstl *.h *.cpp
recursive-include src/GsTL-1.3 *.h *.cpp
recursive-include src/tnt_126 *.h

# Include Python files
recursive-include src/geo_bsd *.py
recursive-include src/python_pkg *.py
recursive-include tests *.py

# Include Visual Studio projects
recursive-include src/msvc *.vcxproj *.sln *.filters

# Include SCons build files
include src/SConstruct
include src/build.sh
include src/build_debug.bat
include src/wininst.bat

# Exclude compiled files and build artifacts
global-exclude *.pyc
global-exclude __pycache__
global-exclude *.pyd
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib
global-exclude *.exe
global-exclude *.obj
global-exclude *.o
global-exclude *.a
global-exclude *.lib
global-exclude *.pdb
global-exclude *.ilk
global-exclude *.exp

# Exclude build directories
global-exclude build/
global-exclude dist/
global-exclude *.egg-info/
global-exclude .git/
global-exclude .github/
global-exclude temp/
global-exclude out/
global-exclude geo/
global-exclude geo_bsd/

# Exclude IDE files
global-exclude *.suo
global-exclude *.user
global-exclude *.vcxproj.user
global-exclude .vs/
global-exclude .idea/
global-exclude *.swp
global-exclude *~

# Exclude documentation build
global-exclude docs/_build/
global-exclude docs/.doctrees/
